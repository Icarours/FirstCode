<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#660769af"
                android:orientation="vertical"
                android:id="@+id/rl_aqi"
                tools:showIn="@layout/fragment_content">
    <TextView android:id="@+id/tv_aqi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="aqi指数"
              android:textSize="25sp"/>
    <TextView android:id="@+id/tv_aqi_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_aqi"
              android:text="aqi"/>
    <TextView android:id="@+id/tv_aqi_qlty"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_aqi_txt"
              android:text="qlty"/>
    <TextView android:id="@+id/tv_aqi_pm10"
              android:layout_width="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_aqi"
              android:text="pm10"/>
    <TextView android:id="@+id/tv_aqi_pm25"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@id/tv_aqi_pm10"
              android:text="pm25"/>
</RelativeLayout>