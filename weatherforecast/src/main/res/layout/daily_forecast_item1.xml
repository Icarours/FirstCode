<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" tools:showIn="@layout/content_daily_forecast">
    <TextView android:id="@+id/tv_date1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="date1"
              android:textSize="20sp"/>
    <TextView android:id="@+id/tv_cnod1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="cnod天气1"
              android:textSize="20sp"/>
    <TextView android:id="@+id/tv_tmp_max1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="tmp_max1"
              android:textSize="20sp"/>
    <TextView android:id="@+id/tmp_min1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="tmp_min1"
              android:textSize="20sp"/>
    <TextView android:id="@+id/tv_wind1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="风力1"
              android:textSize="20sp"/>
</LinearLayout>